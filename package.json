{
  "name": "iphoto-viewer",
  "version": "1.0.0",
  "description": "Modern iPhone photo viewer with Liquid Glass design, drag-and-drop support, USB/WiFi connectivity",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && electron . --no-sandbox",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run build:electron && tsc && vite build && electron-builder",
    "build:win": "npm run build -- --win",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "iphone",
    "photos",
    "viewer",
    "electron",
    "drag-drop",
    "liquid-glass"
  ],
  "author": "KeyWest",
  "license": "MIT",
  "dependencies": {
    "bonjour-service": "^1.2.1",
    "framer-motion": "^11.0.0",
    "node-ios-device": "^4.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.10"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.keywest.iphotoviewer",
    "productName": "iPhoto Viewer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    }
  }
}
